{
  "manifest_version": 3,
  "name": "懒猫应用 GitHub Stars 显示器",
  "version": "1.2.1",
  "description": "在懒猫应用商店显示 GitHub 项目的 star 数量",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://lazycat.cloud/*",
    "https://dl.lazycat.cloud/*",
    "https://api.github.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://lazycat.cloud/appstore/detail/*"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon48.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "web_accessible_resources": [
    {
      "resources": ["debug.html", "debug.js"],
      "matches": ["<all_urls>"]
    }
  ]
}